style "gtk_check_button"
{
    font_name = "Bitstream Vera Sans 7"

    engine "pixmap"
    {
        image
        {
            function        = FOCUS
            overlay_file    = "Transparent.png"
            overlay_stretch = TRUE
        }
        image
        {
            function        = FLAT_BOX
            overlay_file    = "Transparent.png"
            overlay_stretch = TRUE
        }
        image
        {
            function        = BOX
            overlay_file    = "Transparent.png"
            overlay_stretch = TRUE
        }
    }
}

