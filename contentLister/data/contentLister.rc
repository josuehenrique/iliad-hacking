#
# GtkCheckBox 
#
style "check_button"
{	
    GtkCheckButton::indicator-size = 29
    GtkCheckButton::indicator-spacing = 2
    
    font_name = "Bitstream Vera Sans 6.2"
    
    engine "pixmap" {
        image
        {
            function        = FOCUS
            overlay_file    = "transparent.png"
            overlay_stretch = TRUE
        }
        image
        {
            function        = FLAT_BOX
            overlay_file    = "transparent.png"
            overlay_stretch = TRUE
        }
        image
        {
            function        = BOX
            overlay_file    = "transparent.png"
            overlay_stretch = TRUE
        }
        image 
        {
            function        = CHECK
            recolorable     = TRUE
            shadow          = OUT
            overlay_file    = "deselected.png"
            overlay_stretch = FALSE
        }
        image 
        {
            function        = CHECK
            recolorable     = TRUE
            shadow          = IN
            overlay_file    = "selected.png"
            overlay_stretch = FALSE
        }
    }	  
}

