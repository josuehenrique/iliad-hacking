style "sort_order_ascending_button"
{	
    font_name = "Bitstream Vera Sans bold 6.2"
    fg[PRELIGHT]= {0.0, 0.0, 0.0}
    fg[NORMAL]= {0.0, 0.0, 0.0}
    fg[INSENSITIVE]= {0.0, 0.0, 0.0}
    fg[ACTIVE]= {1.0, 1.0, 1.0}
    fg[SELECTED]= {1.0, 1.0, 1.0}

    engine "pixmap" {
        image
        {
            function          = FOCUS
            file              = "transparent.png"
            stretch           = TRUE
        }	  
        image 
        {
            function        = BOX
            recolorable     = TRUE
            shadow          = IN
            file            = "ascending_selected.png"
            stretch         = TRUE
        }
        image 
        {
            function        = BOX
            recolorable     = TRUE
            shadow          = OUT
            file            = "ascending.png"
            stretch         = TRUE
        }
    }	  
}

